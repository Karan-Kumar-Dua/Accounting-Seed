<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>File Preview Carousel</description>
    <isExposed>true</isExposed>
    <masterLabel>File Preview Carousel</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="fieldNameForFileID" type="String" label="Store file ID in?" datasource="apex://FilePreviewCarouselFieldOptions" placeholder="Select field for populating file ID"/>
            <property name="displayFileName" type="Boolean" default="false" label="Display file name?"/>
            <property name="showHeader" type="Boolean" default="false" label="Show header?"/>
            <property name="headerText" type="String" default="Related Documents" label="Header text"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>